<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".CoordinateLayoutFragment">

    <pokercc.android.ui.basic.StateBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <pokercc.android.ui.basic.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backButtonVisible="false"
        app:title="CoordinateLayout" />

    <Button
        android:id="@+id/boss_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="BOSS直聘效果" />
    <Button
        android:id="@+id/demo01_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="嵌套滑动演示" />
    <Button
        android:id="@+id/video_scroll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="视频控件滑动" />
</LinearLayout>